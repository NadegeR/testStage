{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ article.cover }}</td>
            </tr>
            <tr>
                <th>Date_created</th>
                <td>{{ article.dateCreated ? article.dateCreated|date('d-m-Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_liste') }}">back to list</a>

    <a href="{{ path('article_editer', {'id': article.id}) }}">edit</a>

