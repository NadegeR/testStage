{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

    <h1>Article : {{ article.title }}</h1>

<section class="article-details">
    <div>
    <div class="image"><img class="photo align-content-center" src="{{ asset('uploads/covers/'~ article.cover) }}"
                            alt="{{ article.title }}"></div>
    <div class="content">{{ article.content }}</div>
    <div>{{ article.dateCreated | date('d-m-Y H:i')}}</div>
    </div>
</section>



    <a href="{{ path('article_liste') }}"><button type="button" class="btn btn-outline-warning">Retour</button></a>


{% endblock %}
