{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}
    <h1>Liste des article</h1>
    <a href="{{ path('article_liste') }}"><button type="button" class="btn btn-outline-warning">Retour</button></a> <a href="{{ path('article_new') }}"><button type="button" class="btn btn-outline-warning">Ajouter un nouveau article</button></a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Cover</th>
            <th>Date_created</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.cover }}</td>
                <td>{{ article.dateCreated ? article.dateCreated|date('d-m-Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('article_details', {'id': article.id}) }}"><button type="button" class="btn btn-outline-warning">Voir</button></a>

                    <a href="{{ path('article_editer', {'id': article.id}) }}"><button type="button" class="btn btn-outline-warning">Editer</button></a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}"><button type="button" class="btn btn-outline-warning">Ajouter un nouveau article</button></a>
{% endblock %}
